<header>
    <h1>
        <%= @task.title %>
        <%= link_to 'Edit this task', edit_task_path(@task), class: "btn btn-primary" %>
</header>
<div>
    <%= @task.details %>
</div>
<div>
    <% if @task.completed %>
    <i class="far fa-check-square"></i> This task is completed
    <% else %>
    <i class="far fa-square"></i> This task is not completed yet
    <% end %>
</div>
<p>
    <%= link_to 'Back to list', tasks_path %>
</p>
